<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Basic">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/tv_Result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_History"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|end"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:textColor="#8A8A8A"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_Calculation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="bottom|end"
                android:paddingHorizontal="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:text="@string/_0"
                android:textColor="#000000"
                android:textSize="48sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_Result"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_above="@id/grid_layout"
            android:gravity="center|end"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:textColor="#4C4C4C"
            android:textSize="34sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/grid_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout" />

        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border"
            android:columnCount="4"
            android:paddingTop="1dp"
            android:rowCount="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Result">

            <Button
                android:id="@+id/btn_Clear"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/c"
                android:textColor="#004AAD"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Delete"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/del"
                android:textColor="#004AAD"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Percent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/percent"
                android:textColor="#004AAD"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Divide"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/divide"
                android:textColor="#004AAD"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Seven"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/_7"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Eight"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/_8"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Nine"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/_9"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Multiply"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/multiply"
                android:textColor="#004AAD"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Four"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/_4"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Five"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/_5"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Six"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/_6"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Subtract"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/minus"
                android:textColor="#004AAD"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_One"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/_1"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Two"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/_2"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Three"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/_3"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Add"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/plus"
                android:textColor="#004AAD"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Back"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/backspace"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_Zero"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/_0"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Dot"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/calcu_buttons"
                android:stateListAnimator="@null"
                android:text="@string/dot"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_Equal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/equal_button"
                android:stateListAnimator="@null"
                android:text="@string/equal"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>