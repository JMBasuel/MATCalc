<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Fibonacci">

    <TextView
        android:id="@+id/tv_Fibonacci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/fibonacci_sequence"
        android:textColor="#000000"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/tv_Result"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_above="@+id/parentRelative"
        android:layout_below="@id/tv_Fibonacci"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#40FFFFFF"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/parentRelative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_Calculate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/tv_Term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:text="@string/enter_term_number"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_Term"
            android:layout_width="112dp"
            android:layout_height="48dp"
            android:layout_toEndOf="@id/tv_Term"
            android:autofillHints=""
            android:gravity="center"
            android:hint="@string/_34"
            android:inputType="number"
            android:textColor="#000000"
            android:textSize="20sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_Calculate"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btn_Back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/buttons"
        android:text="@string/calculate"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/buttons"
        android:text="@string/back"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</RelativeLayout>